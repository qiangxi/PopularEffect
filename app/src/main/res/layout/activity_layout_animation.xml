<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_layout_animation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认布局动画效果(GridLayout)"/>

    <Button
        android:id="@+id/addGridLayoutItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加item"
        android:textAllCaps="false"/>

    <GridLayout
        android:id="@+id/gridLayoutAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:columnCount="4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认布局动画效果(普通ViewGroup)"/>

    <Button
        android:id="@+id/addViewGroupItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加item"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义布局动画效果(普通ViewGroup)"/>

    <Button
        android:id="@+id/addViewGroupItemCustomAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加item"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
